<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="500.0" minWidth="650.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lp.JavaFxClient.controllers.InscricaoController">

    <!-- titulo -->
    <top>
        <Label alignment="CENTER"
               style="-fx-text-fill: blue;"
               text="Inscrição em Programas de Voluntariado"
               BorderPane.alignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
    </top>

    <!-- tabela -->
    <center>
        <TableView fx:id="tableInscricoes"
                   prefHeight="250.0"
                   prefWidth="600.0">

            <columns>
                <TableColumn fx:id="colPrograma"
                             prefWidth="300.0"
                             text="Programa ID" />

                <TableColumn fx:id="colHoras"
                             prefWidth="300.0"
                             text="Horas Realizadas" />
            </columns>

        </TableView>
    </center>

    <!-- formulario + botoes -->
    <bottom>
        <VBox spacing="15.0">
            <children>

                <GridPane hgap="10"
                          vgap="12"
                          prefWidth="600.0">

                    <children>
                        <Label text="Programa ID:"
                               GridPane.columnIndex="0"
                               GridPane.rowIndex="0" />

                        <TextField fx:id="txtProgramaId"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="0" />
                    </children>

                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </GridPane>

                <HBox alignment="CENTER"
                      spacing="15">
                    <children>
                        <Button fx:id="btnGuardar"
                                onAction="#onGuardar"
                                text="Inscrever-me" />

                        <Button fx:id="btnAtualizar"
                                onAction="#onAtualizar"
                                text="Atualizar Lista" />
                    </children>

                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </HBox>

            </children>

            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </bottom>

</BorderPane>
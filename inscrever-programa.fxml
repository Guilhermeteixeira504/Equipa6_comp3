<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="500.0" minWidth="850.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lp.JavaFxClient.controllers.InscreverProgramaController">

    <top>
        <Label alignment="CENTER" style="-fx-text-fill: blue;" text="Inscrição em Programas de Voluntariado" BorderPane.alignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </Label>
    </top>

    <center>
        <TableView fx:id="tableProgramas" prefHeight="350.0" prefWidth="820.0">

            <columns>

                <TableColumn fx:id="colTitulo" prefWidth="180.0" text="Título" />

                <TableColumn fx:id="colLocalizacao" prefWidth="150.0" text="Localização" />

                <TableColumn fx:id="colVagas" prefWidth="90.0" text="Nº Vagas" />

                <TableColumn fx:id="colTotalHoras" prefWidth="90.0" text="Total Horas" />

                <TableColumn fx:id="colDataInicio" prefWidth="152.0" text="Data Início" />

                <TableColumn fx:id="colDataFim" prefWidth="164.0" text="Data Fim" />

            </columns>

        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <children>

                <Button fx:id="btnInscrever" onAction="#onInscrever" text="Inscrever-me">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>

                <Button fx:id="btnVoltar" onAction="#onVoltar" text="Voltar">
               <font>
                  <Font size="14.0" />
               </font></Button>

            </children>
            <padding>
                <Insets bottom="15.0" top="15.0" />
            </padding>
        </HBox>
    </bottom>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="441.0" prefWidth="602.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lp.JavaFxClient.controllers.CriarEdicaoController">

    <children>
        <VBox alignment="CENTER" layoutX="9.0" layoutY="5.0" prefHeight="430.0" prefWidth="588.0" spacing="15" AnchorPane.bottomAnchor="6.0" AnchorPane.leftAnchor="9.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">

            <Label alignment="CENTER" prefHeight="37.0" prefWidth="155.0" style="-fx-font-size: 22px;" text="Criar Edição" textFill="#234583">
            <font>
               <Font size="40.0" />
            </font></Label>

            <HBox spacing="10">
                <Label minWidth="140" text="Ano:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <TextField fx:id="anoField" promptText="Ex: 2025" />
            </HBox>

            <HBox spacing="10">
                <Label minWidth="140" text="Número de vagas:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <TextField fx:id="numeroVagasField" promptText="Ex: 20" />
            </HBox>

            <HBox spacing="10">
                <Label minWidth="140" text="Data início:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <TextField fx:id="dataInicioField" promptText="AAAA-MM-DD" />
            </HBox>

            <HBox spacing="10">
                <Label minWidth="140" text="Data fim:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <TextField fx:id="dataFimField" promptText="AAAA-MM-DD" />
            </HBox>

            <HBox spacing="10">
                <Label minWidth="140" text="Programa ID:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <TextField fx:id="programaIdField" promptText="Ex: 1" />
            </HBox>

            <Button onAction="#onCriar" prefWidth="200" text="Criar edição">
            <font>
               <Font size="13.0" />
            </font></Button>

            <Label fx:id="mensagemLabel" />

        </VBox>
    </children>
</AnchorPane>

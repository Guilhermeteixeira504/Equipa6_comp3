<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cliente_javafx.CriarProgramaController">

    <children>
        <VBox spacing="12"
              alignment="CENTER"
              AnchorPane.topAnchor="20"
              AnchorPane.bottomAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">

            <!-- TÍTULO -->
            <Label text="Criar Programa de Voluntariado"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- TÍTULO DO PROGRAMA -->
            <HBox spacing="10">
                <Label text="Título:" minWidth="170"/>
                <TextField fx:id="tituloField"
                           promptText="Título do programa"/>
            </HBox>

            <!-- DESCRIÇÃO -->
            <HBox spacing="10">
                <Label text="Descrição:" minWidth="170"/>
                <TextArea fx:id="descricaoField"
                          promptText="Descrição do programa"
                          prefRowCount="3"/>
            </HBox>

            <!-- LOCALIZAÇÃO -->
            <HBox spacing="10">
                <Label text="Localização:" minWidth="170"/>
                <TextField fx:id="localizacaoField"
                           promptText="Ex: Porto"/>
            </HBox>

            <!-- Nº DE VAGAS -->
            <HBox spacing="10">
                <Label text="Número de Vagas:" minWidth="170"/>
                <TextField fx:id="vagasField"
                           promptText="Ex: 20"/>
            </HBox>

            <!-- DATA INÍCIO -->
            <HBox spacing="10">
                <Label text="Data de Início:" minWidth="170"/>
                <TextField fx:id="dataInicioField"
                           promptText="AAAA-MM-DD"/>
            </HBox>

            <!-- DATA FIM -->
            <HBox spacing="10">
                <Label text="Data de Fim:" minWidth="170"/>
                <TextField fx:id="dataFimField"
                           promptText="AAAA-MM-DD"/>
            </HBox>

            <!-- TOTAL HORAS -->
            <HBox spacing="10">
                <Label text="Total de Horas:" minWidth="170"/>
                <TextField fx:id="totalHorasField"
                           promptText="Ex: 40"/>
            </HBox>

            <!-- TIPO VOLUNTARIADO -->
            <HBox spacing="10">
                <Label text="ID Tipo de Voluntariado:" minWidth="170"/>
                <TextField fx:id="tipoVoluntariadoIdField"
                           promptText="Ex: 1"/>
            </HBox>

            <!-- BOTÃO -->
            <Button text="Criar Programa"
                    prefWidth="250"
                    onAction="#criarPrograma"/>

            <!-- FEEDBACK -->
            <Label fx:id="mensagemLabel"/>

        </VBox>
    </children>
</AnchorPane>

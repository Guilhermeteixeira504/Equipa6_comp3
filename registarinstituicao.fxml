<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cliente_javafx.RegistarInstituicaoController">

    <children>
        <VBox spacing="15"
              alignment="CENTER"
              AnchorPane.topAnchor="20"
              AnchorPane.bottomAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">

            <!-- TÍTULO -->
            <Label text="Registar Instituição"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <!-- NOME -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Nome da Instituição:" minWidth="150"/>
                <TextField fx:id="nomeField"
                           promptText="Nome da instituição"/>
            </HBox>

            <!-- DATA FUNDAÇÃO -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Data de Fundação:" minWidth="150"/>
                <TextField fx:id="dataFundacaoField"
                           promptText="AAAA-MM-DD"/>
            </HBox>

            <!-- ID PROGRAMA -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="ID do Programa:" minWidth="150"/>
                <TextField fx:id="programaIdField"
                           promptText="Ex: 1"/>
            </HBox>

            <!-- BOTÃO -->
            <Button text="Registar Instituição"
                    prefWidth="220"
                    onAction="#registarInstituicao"/>

            <!-- MENSAGEM -->
            <Label fx:id="mensagemLabel"/>

        </VBox>
    </children>
</AnchorPane>

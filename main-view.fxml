<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFxClient.controllers.MenuInicialController">

   <children>

      <HBox alignment="CENTER" prefHeight="100.0">
         <children>
            <Label text="Sistema Voluntariado" />
         </children>
      </HBox>

      <Button fx:id="loginButton"
              text="Login"
              onAction="#onLogin" />

      <Button fx:id="registarButton"
              text="Registar"
              onAction="#onRegistar" />


      <Button fx:id="inscricaoButton"
              text="Gestão de Inscrições"
              onAction="#onAbrirInscricoes" />

      <Button fx:id="programasButton"
              text="Lista de Programas de Voluntariado"
              onAction="#onAbrirProgramasVoluntariado" />

      <Button fx:id="sairButton"
              text="Sair"
              onAction="#onSair" />

   </children>

</VBox>